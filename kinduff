ufeed(){
  if [ "$1" = "tweet" ]; then
    while true; do
      noglob heroku run rake update:posts[true] --app ubuntufeed;
      echo 'Done.'
      date
      sleep 3600
    done
  elif [ "$1" = "show" ]; then
     heroku run rake update:show --app ubuntufeed
  else
    while true; do
      heroku run rake update:posts --app ubuntufeed;
      echo 'Done.'
      date
      sleep 3600
    done
  fi
}
